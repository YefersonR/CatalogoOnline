
<div>
    <h2>Index</h2>
    <div class="col-10">
        <div class="row">
            <div class="col-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Anuncio" asp-action="Detail" asp-route-id="" style="text-decoration:none; color:gray;">
                        <img src="" class="img-product-size bd-placeholder-img card-img-top " />
                        <div class="card-body" id="Card">

                        </div>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
        <script>
            window.onload = () => {
                var url = "./List"
                $.ajax({
                    url: url,
                    method: "GET",
                    dataType: "json",
                    contentType: "application/json",
                    success: function (data) {
                        data = JSON.parse(data);
                        $.map(data, (category) => {
                            $("#Card").append(
                                "<h3>" + category.CategoryName + "</h3>" +
                                "<div class='d-flex justify-content-between'>" +
                                "<p class='card-text'>" + category.CategoryDescription + "</p>" +
                                "<small class='fw-bold'></small>" +
                                "</div>" +
                                "<div class='d-flex justify-content-between'>" +
                                "<small class='fw-bold'>" + category.IsActive + "</small>" +
                                "<small class='fw-bold'>" + category.ID + "</small>")
                        })

                    },
                    error: function (err) {
                        console.error(err);
                    }
                })
            }

        </script>
