
@{
    ViewBag.Title = "Register";
}
<div class="formContainer">
    <div class="form">
        <header>
            Register
        </header>

        <form class="formContent" id="formValidate">

            <div class="field">
                <input id="Name" name="Name" placeholder="Enter your name" />
            </div>
            <div class="field">
                <input id="LastName" name="LastName" placeholder="Enter your last name" />
            </div>
            <div class="field">
                <input id="PhoneNumber" name="PhoneNumber" placeholder="Enter your phone number" />
            </div>
            <div class="field">
                <input id="Email" name="Email" placeholder="Enter your email" />
            </div>
            <div class="field">
                <input id="Address" name="Address" placeholder="Enter your address" />
            </div> 
            <div class="field">
                <input id="UserName" name="UserName" placeholder="Enter your username" />
            </div>
            <div class="field">
                <input id="Password" name="Password" placeholder="Enter your password" />
            </div>
            <div class="buttons">
                <button>Register</button>
                <button>Login</button>
            </div>

        </form>
    </div>
</div>


<script>
    $("#formValidate").validate({
        rules: {
            Name: {
                required:true,
            },
            LastName: {
                required: true

            },
            PhoneNumber: {
                required: true

            },
            Email: {
                required: true
            },
            Address: {
                required: true

            },
            UserName: {
                required: true

            },
            Password: {
                required: true

            }
        },
        messages: {
            Name: {
                required: "Please enter your name",
            },
            LastName: {
                required: "Please enter your lastname"

            },
            PhoneNumber: {
                required: "Please enter your phonenumber"

            },
            Email: {
                required: "Please enter your email"
            },
            Address: {
                required: "Please enter your address"

            },
            UserName: {
                required: "Please enter your username"

            },
            Password: {
                required: "Please enter your password"

            }

        }
    })
    $(document).on("submit", "#formValidate", function (e) {
        e.preventDefault();
        var productModel = {
            "Name": $('#Name').val(),
            "LastName": $('#LastName').val(),
            "PhoneNumber": $('#PhoneNumber').val(),
            "Email": $('#Email').val(),
            "Address": $('#Address').val(),
            "UserName": $('#UserName').val(),
            "Password": $('#Password').val()

        }
        $.post('./Register', productModel)
            .done(function (data) {
                if (data != null) {
                }
            })
    })
</script>